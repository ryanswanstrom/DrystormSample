.padded-content.col-lg-6.col-lg-offset-3.center-text
  .row
    .large-heading
      %h1 Forgot your password?
      %p Enter your details to get an email with reset instructions
  .row
    .col-lg-6.col-lg-offset-3
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = devise_error_messages!
        .form-group
          = f.email_field :email, autofocus: true, placeholder: 'Enter your email address', class: 'form-control'
        .form-group
          = f.submit "Submit", class: 'btn btn-primary full-width'
      = render "devise/shared/links"