.padded-content.col-lg-6.col-lg-offset-3.center-text
  .row
    .large-heading
      %h1 Sign up
      %p Welcome aboard :)
  .row
    .col-lg-6.col-lg-offset-3
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .form-group
          = f.email_field :email, autofocus: true, placeholder: 'Enter your email address', class: 'form-control'
        .form-group
          = f.password_field :password, autocomplete: "off", placeholder: 'Enter a password', class: 'form-control'
          - if @validatable
            %i
              (#{@minimum_password_length} characters minimum)
        .form-group
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm your password', class: 'form-control'
        .form-group
          = f.submit "Sign up", class: 'btn btn-primary full-width'
      = render "devise/shared/links"