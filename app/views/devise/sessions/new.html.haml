.padded-content.col-lg-6.col-lg-offset-3.center-text
  .row
    .large-heading
      %h1 Login
      %p Welcome back :)
  .row
    .col-lg-6.col-lg-offset-3
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group
          = f.email_field :email, autofocus: true, placeholder: 'Enter your email address', class: 'form-control'
        .form-group
          = f.password_field :password, autocomplete: "off", placeholder: 'Enter your password', class: 'form-control'
        .form-group.left-align-text
          = f.submit "Log in", class: 'btn btn-primary full-width'
        - if devise_mapping.rememberable?
          .form-group.left-align-text
            = f.check_box :remember_me, checked: 'checked'
            = f.label :remember_me
      = render "devise/shared/links"